@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="column column-centered">
    <h1>@ViewData["Title"]</h1>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-medium">
        <div class="column">
            <div asp-validation-summary="All" class="validation-alert"></div>
            <div class="row">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="validation-alert"></span>
            </div>
            <div class="row">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="validation-alert"></span>
            </div>
            <div class="row">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="validation-alert"></span>
            </div>
            <div class="row">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="validation-alert"></span>
            </div>
            <button type="submit" class="clickable">Зарегистрироваться</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
