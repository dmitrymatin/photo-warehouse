@page
@model PhotoWarehouseApp.Pages.Admin.Photos.CreateMultipleModel

@{
    ViewData["Title"] = "Add Multiple Photos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Add Multiple Photos</h1>

@if (Model.ImageError is not null)
{
    <div>@Model.ImageError</div>
}

@if (Model.NoFilesAddedError is not null)
{
    <div>@Model.NoFilesAddedError</div>
}

<h4>Photo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.CommonCategoryId" class="control-label"></label>
                <select asp-for="Input.CommonCategoryId" class="form-control" asp-items="Model.Input.Categories"></select>
            </div>

            <div class="form-group">
                <label asp-for="Input.CommonDateTaken" class="control-label"></label>
                <input type="datetime-local" asp-for="Input.CommonDateTaken" class="form-control" />
            </div>

            <div class="form-group">
                <label>Upload photos</label>
                <input type="file" name="photoItem" multiple value="" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to main page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
