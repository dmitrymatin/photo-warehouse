@page
@model PhotoWarehouseApp.Pages.Admin.Photos.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Фотографии</h2>
<div class="row">
    <a class="clickable" asp-page="Create">Добавить новое фото</a>
    <a class="clickable" asp-page="CreateMultiple">Добавить несколько фотографий</a>
</div>
<div class="table-wrapper column">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Photo[0].Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Photo[0].Description)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Photo[0].InitialUploadDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Photo[0].DateTaken)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Photo[0].Category)
                </th>
                <th scope="col">
                    Действия
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Photo)
            {
                <tr>
                    <td>
                        <a asp-page="/Photos/Details" asp-route-photoId="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="local-date-time">
                        @item.InitialUploadDate.ToString(System.Globalization.CultureInfo.InvariantCulture)
                    </td>
                    <td class="local-date-time">
                        @item.DateTaken?.ToString(System.Globalization.CultureInfo.InvariantCulture)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <div class="column">
                            <a class="clickable" asp-page="./Edit" asp-route-photoId="@item.Id">Изменить</a>
                            <a class="clickable" asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
