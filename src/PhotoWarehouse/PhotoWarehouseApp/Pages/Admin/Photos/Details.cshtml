@page "{photoId:int}"
@model PhotoWarehouseApp.Pages.Admin.Photos.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Photo: @Html.DisplayFor(model => model.Photo.Name)</h4>
    <div>@Html.DisplayFor(model => model.Photo.Description)</div>
    <hr />

    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Photo.Name)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.DateTaken)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.InitialUploadDate)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.Category.Name)</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.Photo.Name)</td>
                <td>@Html.DisplayFor(model => model.Photo.DateTaken)</td>
                <td>@Html.DisplayFor(model => model.Photo.InitialUploadDate)</td>
                <td>@Html.DisplayFor(model => model.Photo.Category.Name)</td>
            </tr>
        </tbody>
    </table>

    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Photo.PhotoItems[0].DateUploaded)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.PhotoItems[0].FileFormat.Name)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.PhotoItems[0].Size)</td>
                <td>@Html.DisplayNameFor(model => model.Photo.PhotoItems[0])</td> <!--for photo iteself-->
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var photoItem in Model.Photo.PhotoItems)
                {
                    <td>@photoItem.DateUploaded</td>
                    <td>@photoItem.FileFormat.Name</td>
                    <td>@photoItem.Size</td>
                    <td></td> <!--for photo iteself-->
                }
            </tr>
        </tbody>
    </table>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.InitialUploadDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.InitialUploadDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.DateTaken)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.DateTaken)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Photo.Category.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Photo.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
