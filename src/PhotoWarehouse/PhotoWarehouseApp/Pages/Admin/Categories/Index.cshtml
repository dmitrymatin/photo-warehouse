@page
@model PhotoWarehouseApp.Pages.Admin.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="column column-medium">
    <h2>Управление категориями</h2>

    <div class="row">
        <a class="clickable" asp-page="Create">Добавить</a>
    </div>
    <div class="table-wrapper column">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.PhotoCategory[0].Name)
                    </th>
                    <th scope="col">
                        Действия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PhotoCategory)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <div class="column">
                                <a class="clickable" asp-page="./Edit" asp-route-id="@item.Id">Изменить</a>
                                <a class="clickable" asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
