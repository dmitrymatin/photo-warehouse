@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="navItem clickable" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="navItem clickable">Logout</button>
    </form>

}
else
{
    <a class="navItem clickable" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="navItem clickable" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
