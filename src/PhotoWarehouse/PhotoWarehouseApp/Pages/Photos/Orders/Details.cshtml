@page "{orderId:int}"
@model PhotoWarehouseApp.Pages.Photos.Orders.DetailsModel
@{
    ViewData["Title"] = "Заказ";
}

<div class="column">
    <div class="card-title">
        <h2>Заказ от <span class="local-date-time">@Model.Order.DateCreated.ToString("o")</span></h2>
    </div>
</div>

<form method="post">
    <div class="row card-collection">
        <input type="hidden" asp-for="Order.Id" />
        @for (int i = 0; i < Model.Order.OrderItems.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Order.OrderItems[i].Id" />
            <partial name="_OrderDetails" model="Model.Order.OrderItems[i]" />
        }
    </div>
</form>
