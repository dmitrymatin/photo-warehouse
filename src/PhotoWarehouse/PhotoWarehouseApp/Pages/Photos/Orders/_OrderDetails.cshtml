@using PhotoWarehouse.Domain.Photos
@model PhotoItem

<div class="card column">
    <div class="card-picture row">
        <a asp-page="/Photos/Details" asp-route-photoId="@Model.Photo.Id">
            <img src="@Model.RelativePath"
                 alt="@Model.Photo.Name of size @Model.Size" in @Model.FileFormat format />
        </a>
    </div>
    <div class="card-title">
        <a class="clickable" asp-page="/Photos/Details" asp-route-photoId="@Model.Photo.Id">
            @Model.Photo.Name
        </a>
    </div>
    <div class="card-info">
        @Model.Photo.Description
    </div>
    <div class="card-info">
        Размер @Model.Size @Model.FileFormat
    </div>
    <div class="card-info">
        Формат @Model.FileFormat
    </div>
</div>
